<% title(space_title(@space)) %>

<% set_bread_crumbs(:spaces_crumb, edit_space_crumb(@space), space_administrators_crumb(@space), "Edit") %>

<script type="text/javascript">
  $(document).ready(function() { $('a[rel*=facebox]').facebox(); });
</script>

<%= render(:partial => "/spaces/space_detail", :locals => { :space => @space }) %>

<div style="text-align: center;">
  <%= render(:partial => "/layouts/invitation") %>
</div>

<div class="page_content">
  <% form_tag(:method => "post", :controller => "space_administrators", :action => "update", :id => "") do %>
      <%= submit_tag("Update Administrators", :class => "button_widget")  %>
      &nbsp;&nbsp;
      <%= link_to("&larr; Back", space_space_administrations_url(@space)) %>

      <table id="user_list" class="horizontal">
        <tr>
          <th>Full Name</th>
          <th>Username</th>
          <th>Email</th>
          <th width="1%">Permission</th>
        </tr>
        <tbody class="highlight">

        <% @users.each do |user| %>
            <tr id="<%= dom_id(user) %>" <%= has_permission_css(@space, user) %>>
              <td><%= h(user.full_name) %></td>
              <td><%= h(user.username) %></td>
              <td><%= h(user.email) %></td>
              <td><%= permission_widget(user, @space) %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
  <% end %>

</div>
