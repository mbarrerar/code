<%= title(user_title(user)) %>

<div class="row-fluid">
    <div class="span4">
        <%= user_left_nav_tabs(user).html %>
    </div>

    <div class="span8 boxed-group">
        <h3>User Permissions</h3>

        <div class="boxed-group-inner">
            <table id="user_permissions" class="table table-condensed">
                <thead>
                    <tr>
                        <th>Repository</th>
                        <th>Space</th>
                        <th>Url</th>
                        <th>Permission</th>
                    </tr>
                </thead>
                <tbody class="highlight">
                    <% permissions.each do |perm| %>
                        <tr>
                            <td><%= perm.repository.name %></td>
                            <td><%= perm.space.name %></td>
                            <td><%= perm.repository.url %></td>
                            <td><%= perm.permission %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
