<%= simple_form_for([:admin, user]) do |f| %>
    <% disabled = !f.object.new_record? %>

    <%= f.input(:username, :disabled => disabled) %>
    <%= f.input(:ldap_uid, :disabled => disabled, :as => :string) %>
    <%= f.input(:full_name, :hint => '') %>
    <%= f.input(:email) %>

    <%= f.input(:admin, :as => :radio, :item_wrapper_class => 'inline') %>
    <%= f.input(:active, :as => :radio, :item_wrapper_class => 'inline') %>
    <%= f.input(:terms_and_conditions, :as => :radio, :item_wrapper_class => 'inline') %>

    <%= f.button(:submit) %> or
    <%= link_to_cancel(admin_users_path) %>
<% end %>
