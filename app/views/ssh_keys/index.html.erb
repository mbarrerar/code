<%= title("Manage Your SSH Public Keys") %>
<% set_bread_crumbs("SSH Keys") %>

<script type="text/javascript">
    $(document).ready(function () {
        ssh_keys.init();
    });
</script>


<%= link_to_new("New SSH Public Key", new_ssh_key_path) %>
<br/>
<br/>

<% unless ssh_keys.empty? %>
    <table id="ssh_keys" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th width="1%" colspan="2">Actions</th>
                <th>Key Name</th>
                <th>Key</th>
                <th>Created At</th>
            </tr>
        </thead>

        <tbody>
            <% ssh_keys.each do |key| %>
                <tr id="<%= dom_id(key) %>">
                    <td><%= link_to_edit(edit_ssh_key_url(key)) %></td>
                    <td><%= link_to("Delete", key, :class => "remote-delete mini_button_widget") %></td>
                    <td><%= h(key.name) %></td>
                    <td><%= text_area_tag("key", key.key, :disabled => true, :cols => 50, :rows => 5) %></td>
                    <td><%= h(key.created_at.to_s(:mdy)) %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
<% end %>

